{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": false,
    "moduleResolution": "node",
    "pretty": true,
    "noEmitHelpers": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es7"
    ]
  },
  "include": [
    "./lib/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
